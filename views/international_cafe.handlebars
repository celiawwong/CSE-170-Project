	<script type="text/javascript">
    var clicks = 0;
    var clicks2 = 0;
    var clicks3 = 0;
    var clicked1 = false;
    var clicked2 = false;
    var clicked3 = false;
    function onClick() {
    	if(clicked1===false){
        clicks += 1;
        document.getElementById("clicks").innerHTML = clicks;
        clicked1 = true;
     }
    };
    function onClick2() {
    	if(clicked2 === false){
    	clicks2 += 1;
        document.getElementById("clicks2").innerHTML = clicks2;
        clicked2 = true;
     }
    };
    function onClick3() {
